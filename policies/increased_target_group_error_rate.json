{
  "policy": {
    "actions": [
      {
        "category": 3,
        "type": "event"
      }
    ],
    "conditions": [
      {
        "analytic": "suddenDeviation",
        "level": 30,
        "metric": "netuitive.aws.applicationelb.5xxpercent",
        "operator": ">"
      },
      {
        "analytic": "actual",
        "level": 1,
        "metric": "netuitive.aws.applicationelb.5xxpercent",
        "operator": ">"
      },
      {
        "analytic": "actual",
        "level": 1000,
        "metric": "aws.applicationelb.requestcount",
        "operator": ">="
      }
    ],
    "creatorEmail": "research@metricly.com",
    "description": "This policy will generate a Critial alert for a sudden change in Target Group error rates that exceed 30% with a minimum of 1000 requests and 1% error rate. You may wish to tune percentage change threshold to better suit your environment.",
    "duration": 300,
    "enabled": true,
    "name": "AWS ALB - Sudden Increase Target Group Error Rate",
    "scope": {
      "elementAttributesAll": true,
      "elementTagsAll": true,
      "elementTypes": [
        "Target Group"
      ]
    }
  }
}