{
  "policy": {
    "actions": [{
      "category": 3,
      "type": "event"
    }],
    "conditions": [{
      "analytic": "suddenDeviation",
      "level": 10.0,
      "metric": "aws.applicationelb.requestcount",
      "operator": ">"
    }],
    "creatorEmail": "research@metricly.com",
    "duration": 300,
    "description": "This policy will generate a Critical event when average request count has a sudden change exceeding 10%.",
    "enabled": true,
    "name": "AWS ALB - Sudden Increase Request Count",
    "scope": {
      "elementAttributesAll": true,
      "elementTagsAll": true,
      "elementTypes": [
        "ALB"
      ]
    }
  }
}
