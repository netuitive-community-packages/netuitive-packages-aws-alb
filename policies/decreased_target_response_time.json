{
  "policy": {
    "actions": [
      {
        "category": 3,
        "type": "event"
      }
    ],
    "conditions": [
      {
        "analytic": "suddenDeviation",
        "level": 30,
        "metric": "aws.applicationelb.targetresponsetime",
        "operator": "<"
      },
      {
        "analytic": "actual",
        "level": 0.1,
        "metric": "aws.applicationelb.targetresponsetime",
        "operator": ">="
      },
      {
        "analytic": "actual",
        "level": 1000,
        "metric": "aws.applicationelb.requestcount",
        "operator": ">="
      }
    ],
    "creatorEmail": "research@metricly.com",
    "description": "This policy will generate a Critical alert when average target response time has a sudden change exceeding 40% and a minimum of 100ms. You may wish to tune percentage change threshold to better suit your environment.",
    "duration": 300,
    "enabled": true,
    "name": "AWS ALB - Sudden Decrease Target Response Time",
    "scope": {
      "elementAttributesAll": true,
      "elementTagsAll": true,
      "elementTypes": [
        "ALB",
        "Target Group"
      ]
    }
  }
}